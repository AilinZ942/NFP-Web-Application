rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

		match /{col}/{resId} {
      allow read: if col == "healthy resource";           
      allow create: if col == "healthy resource" && request.auth != null;
      allow update: if col == "healthy resource" && request.auth != null;
      allow delete: if false;
      }
    
    match /users/{resId} {
    	allow read: if true;
      allow create: if true;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }


    match /{document=**} {
      // allow read, write: if request.time < timestamp.date(2025, 10, 9);
      allow read, write: if false;
    }
  }
}